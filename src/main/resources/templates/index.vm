<html>
	<head>
		<script type="text/javascript" src="https://sandbox.masterpass.com/integration/merchant.js"></script>
	</head>
	<body>
		<p class="message"></p>
		<script type="text/javascript" language="Javascript">
			masterpass.checkout({
				"checkoutId": "$config.get("checkoutId").toString()",                                   // Merchant checkout identifier received during when merchant onboarded for masterpass
				"allowedCardTypes": ["$config.get("acceptedCards").toString()"],               // Card types accepted by merchant
				"amount": "$config.get("amount").toString()",                                                                 // Shopping cart subtotal
				"currency": "$config.get("currency").toString()",                                                                  // Currency code for cart
				"shippingLocationProfile": "BR",	                                              // Shipping locations supported by merchant - configured in merchant portal
				"suppress3Ds": $config.get("supress3d"),                                                               // Set true when 3DS not mandatory for the spcecific country
				"suppressShippingAddress": $config.get("supressShipping"),                                                   // Set true when cart items has digital goods only
				"cartId": "$config.get("cartId").toString()",                                   // Unique identifier for cart generated by merchant
				"callbackUrl": "$config.get("callback").toString()",                                  // The URL to which the browser must redirect when checkout is complete
			});
		</script>
	</body>
</html>